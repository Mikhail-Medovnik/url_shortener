{
  "name": "fastify-template",
  "version": "1.0.0",
  "packageManager": "yarn@4.1.1",
  "engines": {
    "node": ">=20.9.0",
    "yarn": ">=3.0.0"
  },
  "main": "index.js",
  "type": "module",
  "exports": "./dist/index.js",
  "repository": "git@github.com:rtivital/fastify-template.git",
  "author": "Vitaly Rtishchev <rtivital@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "serve": "NODE_ENV=development node -r dotenv/config dist/index.js",
    "dev": "NODE_ENV=development nodemon --es-module-specifier-resolution=node -r dotenv/config src/index.ts",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "lint": "eslint src --cache",
    "typecheck": "tsc --noEmit",
    "jest": "jest",
    "prettier:test": "prettier --check \"**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx}\"",
    "test": "npm run prettier:test && npm run typecheck && npm run lint"
  },
  "devDependencies": {
    "@fastify/postgres": "^5.2.2",
    "@fastify/rate-limit": "^9.1.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@types/fastify-static": "^2.2.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.2",
    "@types/pg": "^8",
    "@types/randomstring": "^1",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-security": "^2.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "fastify-html": "^0.3.3",
    "fastify-postgres-dot-js": "^0.2.2",
    "fastify-static": "^4.7.0",
    "fs": "^0.0.1-security",
    "pg": "^8.11.5",
    "randomstring": "^1.3.0",
    "zod": "^3.22.4"
  }
}
